{
  "version": "1.0.0",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    // 在tsx文件里支持jsx
    "jsx": "react",
    // 指定生成哪个模块系统的代码
    "module": "esNext",
    // 生成es5的js文件
    "target": "es5",
    // 决定如何处理模块
    "moduleResolution": "node",
    // 为 false 时，如果编译器无法根据变量的使用来判断类型时，将用 any 类型代替。为 true 时，进行强类型检查，会报错
    "noImplicitAny": false,
    // 编译 js 的时候，删除掉注释
    "removeComments": true,
    "preserveConstEnums": true,
    // 允许编译js文件
    "allowJs": true,
    // 允许从没有设置默认导出的模块中默认导入
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "global.d.ts"],
    "lib": ["dom", "esnext"],
    // 解析非相对模块的基准目录
    "paths": {
      // alias 路径映射，如在文件中使用‘@’相当于‘src/’
      "@": ["src/*"],
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["./src/**/*", "./global.d.ts"]
}
